<%-include('header')-%>  

    <h1>Editar pelicula</h1>
    <form action="/peliculas/editar/<%=pelicula.id%> " method="POST">
        <div>
            <label for="">Titulo de la pelicula</label>
            <input type="text" name="titulo" value="<%=pelicula.title%>">
        </div>
        <div>
            <label for="">Premios</label>
            <input type="text" name="premios" value="<%=pelicula.awards%>">
        </div>
        <div>
            <label for="">Duraci√≥n</label>
            <input type="text" name="duracion" value="<%=pelicula.length%>">
        </div>
        <div>
            <label for="">Rating</label>
            <input type="text" name="rating" value="<%=pelicula.rating%>">
        </div>
        <div>
            <label for="">Fecha de estreno</label>
            <input type="date" name="fecha_estreno">
        </div>
        <div>
            <label for="">Genero</label>
            <select name="genero" id="">
                <%for(genero of generos){%>
                    <%if(pelicula.genre_id==genero.id){%>
                        <option value="<%=genero.id%>" selected> <%=genero.name%> </option>
                    <%}else{%>
                        <option value="<%=genero.id%>"> <%=genero.name%> </option>
                    <%}%>                          
                <%}%>  
            </select>
        </div>
        <button type="submit">Editar!</button>        
    </form>


<%-include('footer')-%> 